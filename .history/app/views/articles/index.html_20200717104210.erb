<h1>記事一覧</h1>
<p>
<%= link_to "新規投稿", new_article_path %>
</p>
<table>
 <tr>
  <th>タイトル</th>
  <th>本文</th>
 </tr>
 <% @articles.each do |article| %>
 <tr>
  <td><%= article.title %></td>
  <td><%= article.description %></td>
  <td><%= link_to '編集', edit_article_path(article) %></td>
  <td><%= link_to '詳細', article_path(article) %></td>
  <td><%= link_to '削除', article_path(article), method: :delete, data: {confirm: "Are you sure?"} %></td>

 </tr>
 <% end %>
</table>